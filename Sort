#include <ctime>
#include <iostream> //В ней реализована поддержка для файлового ввода/вывода данных встроенных типов.
using namespace std;

int main()
{
    srand(time(0)); //Значение, возвращенное функцией time (объявлена в заголовке <ctime>) отличается каждую секунду, что дает возможность получать совершенно случайные последовательности чисел, при каждом новом вызове функции rand

    float* p; // указатель для выделения памяти под массив
    int size;

    // Ввод количества элементов массива
    size = 1000;
    cout << "Kolichestvo elementov: \n" <<  size;
    p = new float[size]; // выделение памяти под массив

    // заполнение массива
    for (int i = 0; i < size; i++) {
        p[i] = rand() / 1000.0f;
        cout << p[i] << " ";

    }


    float temp; // временная переменная для обмена элементов местами
        // Сортировка массива пузырьком
    for (int i = 0; i < size - 1; i++) {
        for (int j = 0; j < size - i - 1; j++) {
            if (p[j] > p[j + 1]) {
                temp = p[j];
                p[j] = p[j + 1];
                p[j + 1] = temp;
            }
        }
    }

    // Вывод отсортированного массива на экран 
    cout << "sorted: \n";
    for (int i = 0; i < size; i++) {
        cout << p[i] << " ";

    }
    cout << endl;

    delete[] p;//освобождение памяти

    return 0;



    return 0;
}
